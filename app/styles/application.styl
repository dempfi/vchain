@import 'nib'
global-reset()

body
  font-family Arial, sans-serif
  color #333
  font-size 16px

header
  background-color #ECF0F1
  background-image url('img/header.png')
  background-position bottom
  background-size 20px 13px
  background-repeat repeat-x
  padding 15px 0 25px
  text-align center
  font-weight 500

strong
  font-weight bolder

label
  font-weight bold
  font-size 14px
  color #666
  letter-spacing 0px
  line-height 20px
  display block
  min-height 90px

  .error-text
    display none
    font-weight normal
    font-size 12px
    color #D0021B
    letter-spacing 0px
    line-height 20px

  &.error
    color #D0021B

    input
      border-color #D0021B

    .error-text
      display: block


input
  box-sizing: border-box
  display block
  border 1px solid #DEDEDE
  border-radius 3px
  height 35px
  width 100%
  padding 0 10px
  margin-top 4px
  font-size 14px
  color #333
  letter-spacing 0px
  line-height 20px

.content
  padding 20px

.button
  background #D0021B
  border none
  border-radius 3px
  color white
  cursor pointer
  display block
  font-size 16px
  font-weight 500
  letter-spacing 0px
  padding 17px 0 16px
  text-align center
  text-decoration none
  width 100%
  &:disabled
    background #BDC3C7

.red-and-border
  border-bottom 1px dashed #D0021B
  color #D0021B
  font-size 14px
  font-weight normal
  letter-spacing 0px
  line-height 20px
  text-decoration none
  cursor pointer

.forgot-password
  display inline-block
  margin-top 6px

.get-id
  text-align center
  margin-top 15px

.notice
  color #666
  text-align center
  font-size 14px
  margin-top 30px
