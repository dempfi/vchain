@import 'nib'
global-reset()

body
  font-family Arial, sans-serif
  color #333
  font-size 16px

header
  background-color #ECF0F1
  background-image url('img/header.png')
  background-position bottom
  background-size 20px 13px
  background-repeat repeat-x
  padding 15px 0 25px
  text-align center
  font-weight 500

strong
  font-weight bolder

label
  font-weight bold
  font-size 14px
  color #666
  letter-spacing 0px
  line-height 20px
  display block
  min-height 90px

  .error-text
    display none
    font-weight normal
    font-size 12px
    color #D0021B
    letter-spacing 0px
    line-height 20px

  &.error
    color #D0021B

    input
      border-color #D0021B

    .error-text
      display: block


input
  box-sizing: border-box
  display block
  border 1px solid #DEDEDE
  border-radius 3px
  height 35px
  width 100%
  padding 0 10px
  margin-top 4px
  font-size 14px
  color #333
  letter-spacing 0px
  line-height 20px

.forgot-password
  color #D0021B
  border-bottom 1px dashed #D0021B
  font-weight normal
  font-size 14px
  color #D0021B
  letter-spacing 0px
  line-height 20px
  margin-top 6px
  display inline-block

.content
  padding 20px

.link-button
  background #D0021B
  border-radius 3px
  color white
  font-weight 500
  text-decoration none
  padding 17px 0 16px
  text-align center
  width 100%
  display block
  cursor pointer

.notice
  color #666
  text-align center
  font-size 14px
