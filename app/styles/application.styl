@import 'nib'
global-reset()

body
  font-family Arial, sans-serif
  color #333
  font-size 16px

header
  background-color #ECF0F1
  background-image url('img/header.png')
  background-position bottom
  background-size 20px 13px
  background-repeat repeat-x
  padding 15px 0 25px
  text-align center
  font-weight 500

strong
  font-weight bolder

.content
  padding 20px

.link-button
  background #D0021B
  border-radius 3px
  color white
  font-weight 500
  text-decoration none
  padding 17px 0 16px
  text-align center
  width 100%
  display block
  cursor pointer

.notice
  color #666
  text-align center
  font-size 14px
